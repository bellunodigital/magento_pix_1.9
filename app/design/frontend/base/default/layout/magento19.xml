<?xml version="1.0"?>
<layout version="0.1.0">

    <!-- Inovarti OneStepCheckout compatibility -->
    <onestepcheckout_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/form-belluno.js</name>
            </action>
            <block type="core/text" name="external_js">
                <action method="setText">
                    <text>
                        <![CDATA[<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/node-forge@0.7.0/dist/forge.min.js"></script>]]>
                    </text>
                </action>
            </block>
        </reference>
     </onestepcheckout_index_index>
     <!-- \Inovarti OneStepCheckout compatibility -->

    <checkout_onepage_index translate="label">
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/form-belluno.js</name>
            </action>
            <block type="core/text" name="external_js">
                <action method="setText">
                    <text>
                        <![CDATA[<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/node-forge@0.7.0/dist/forge.min.js"></script>]]>
                    </text>
                </action>
            </block>
        </reference>
    </checkout_onepage_index>

    <checkout_onepage_success>
        <label>One Page Checkout Success</label>
        <reference name="content">
            <reference name="checkout.success">
                <action method="setTemplate"><template>magento19/success.phtml</template></action>
            </reference>
        </reference>
      
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>js/form-belluno.js</name>
            </action>
        </reference>
    </checkout_onepage_success>

    <checkout_onepage_review>
        <reference name="checkout.onepage.review.button">
            <action method="setTemplate">
                <template>magento19/checkout/onepage/review/button.phtml</template>
            </action>
        </reference>
    </checkout_onepage_review>

    <sales_order_view>
        <reference name="content">
            <block type="magento19/order_info" template="magento19/info.phtml" />
        </reference>
    </sales_order_view>

</layout>